#!/usr/bin/env bash
source "$HOME/.dotfiles/bin/lib/gummies.sh"
source "$HOME/.dotfiles/bin/lib/handle-dynamic-theme.sh"

THEMES_DIR="$HOME/.dotfiles/themes"
CURRENT_THEME_DIR="$HOME/.dotfiles/current/theme"
CURRENT_WALLPAPER="$HOME/.dotfiles/current/wallpaper"

is_dynamic_theme() {
    local name="$1"
    [[ "$name" == "wallust" || "$name" == "matugen" ]]
}

get_current_theme() {
    if [[ -L "$CURRENT_THEME_DIR" ]]; then
        basename $(readlink "$CURRENT_THEME_DIR")
    else
        echo ""
    fi
}

get_theme_list() {
    local themes=("dynamic(global)")
    local theme_paths=("$THEMES_DIR"/*/)
    for theme in "${theme_paths[@]}"; do
        base=$(basename "$theme")
        if [[ "$base" == "wallpapers" || "$base" == "matugen" || "$base" == "wallust" ]]; then
            continue
        fi
        themes+=("$base")
    done
    echo "${themes[@]}"
}


reload_apps() {
    log_step "Reloading Apps..."
    hyprctl reload &> /dev/null
    restart-app waybar
    restart-app swayosd-server 
    restart-walker
    makoctl reload &> /dev/null
    if pgrep -x waypaper; then
        restart-app waypaper
    fi
    apply-for-gnome
    log_success "Done Realoding Apps"
}

apply-for-gnome() {
    if [[ -f "$CURRENT_THEME_DIR/theme.light" ]]; then
        gsettings set org.gnome.desktop.interface color-scheme "prefer-light"   # for GTK4 apps
        gsettings set org.gnome.desktop.interface gtk-theme "Adwaita"   # for GTK3 apps
        touch /tmp/light
    else
        gsettings set org.gnome.desktop.interface color-scheme "prefer-dark"   # for GTK4 apps
        gsettings set org.gnome.desktop.interface gtk-theme "Adwaita-dark"   # for GTK3 apps
        if [[ -f /tmp/light ]]; then
            rm /tmp/light
        fi
    fi
}

add_wallpaper() {
    local wallpaper="$1"

    #Check if file is given and exists
    local select_from_base=0
    if [[ -z "$wallpaper" ]]; then
        log_warning " Wallpaper file not provided, select one from global to add to specific theme"
        select_from_base=1
        local wallpaper_dir="$THEMES_DIR/wallpapers"
        local wallpapers=("$wallpaper_dir"/*)
        wallpaper=$(gum choose ${wallpapers[@]} --header "Select a Wallpaper")
    fi
    if [[ ! -f "$wallpaper" ]]; then
        log_error "Error: No such file: $wallpaper"
        exit 1
    fi

    # Select theme via gum
    local themes=$(get_theme_list)
    local theme=$(gum choose ${themes[@]} --height 6 --header "Select a Theme (Will also be available for dynamic themes)")
    log_step "Adding wallpaper to theme: $theme"
    local fname=$(basename "$wallpaper")

    # Copy file to global wallpaper folder (if needed) and add it to the select theme wallpapers folder
    if [[ "$(realpath $(dirname "$wallpaper"))" != "$THEMES_DIR/wallpapers" ]]; then
        cp "$wallpaper" "$THEMES_DIR/wallpapers/$fname"
    fi
    if [[ "$theme" != "dynamic(global)" ]]; then
        ln -sf "$THEMES_DIR/wallpapers/$fname" "$THEMES_DIR/$theme/wallpapers/"
    fi
    log_success "Wallpaper successfuly added to theme: $theme"
}

select_wallpaper() {
    local wallpaper_dir="$CURRENT_THEME_DIR/wallpapers"
    local wallpapers=("$wallpaper_dir"/*)
    local choice=$(gum choose ${wallpapers[@]} --header "Select a Wallpaper")
    set_wallpaper "$choice"
}

set_wallpaper() {
    local wallpaper="$1"

    #Check if file is given and exists
    if [[ -z "$wallpaper" ]]; then
        log_error "Error: Wallpaper file not provided"
        exit 1
    fi
    if [[ ! -f "$wallpaper" ]]; then
        log_error "Error: No such file: $wallpaper"
        exit 1
    fi

    log_step "Setting Wallpaper..."
    ln -nsf "$wallpaper" "$CURRENT_WALLPAPER"
    if is_dynamic_theme "$(get_current_theme)"; then
        generate_colors_from_wallpaper "$wallpaper"
        reload_apps
    fi

    if ! pgrep -x waypaper; then
        hyprctl hyprpaper preload "$wallpaper" &> /dev/null
        hyprctl hyprpaper wallpaper "HDMI-A-1,$wallpaper" &> /dev/null
        hyprctl hyprpaper wallpaper "DVI-D-1,$wallpaper" &> /dev/null
    fi
    log_success "Wallpaper Applied"
}

random_wallpaper(){
    local current_theme=$(get_current_theme)
    local wallpapers="$THEMES_DIR/$current_theme/wallpapers"
    local search_type="l"
    if is_dynamic_theme "$current_theme"; then
        wallpapers="$THEMES_DIR/wallpapers"
        search_type="f" #dynamic themes take from the source and not links
    fi


    if [[ -z "$current_theme" ]]; then
        log_error "Error: No theme set"
        exit 1
    fi
    
    # Get a random wallpaper that is not the current one
    local current_wall=$(realpath "$CURRENT_WALLPAPER")
    local rand_bg=$(find "$wallpapers" -type "$search_type" ! -name "$(basename "$current_wall")" | shuf -n 1)
    echo "$rand_bg"
}

set_theme() {
    local theme_name="$1"
    local theme_dir="$THEMES_DIR/$theme_name"
    local search_type="l"
    local wallpapers="$theme_dir/wallpapers"
    if is_dynamic_theme "$theme_name"; then
        wallpapers="$THEMES_DIR/wallpapers"
        search_type="f" #dynamic themes take from the source and not links
    fi
    if [[ -z "$theme_name" ]]; then
        log_error "Error: No theme provided"
        exit 1
    fi
    if [[ ! -d "$theme_dir" ]] && ! is_dynamic_theme "$theme_name"; then
        log_error "Error: No such theme"
        exit 1
    fi
    if [[ ! -d "$wallpapers" ]]; then
        log_error "Error: No wallpapers for theme"
        exit 1
    fi
    if [[ $(find "$wallpapers" -type "$search_type" | wc -l) -eq 0 ]]; then
        log_error "Error: No wallpapers for theme"
        exit 1
    fi 
    ln -nsf "$theme_dir" "$CURRENT_THEME_DIR"
    local wallpaper="$(random_wallpaper)"

    if is_dynamic_theme "$theme_name"; then
        generate_colors_from_wallpaper "$wallpaper"
    fi

    set_wallpaper "$wallpaper"
    reload_apps
    log_success "Theme Set Successfuly!"
}

main() {
    echo "Current theme: $(get_current_theme)"
    if [[ $# -eq 0 ]]; then 
        echo "Usage: themectl <theme-name> | add-bg /path/to/wallpaper | next-bg | wallpaper [wallpaper]"
        exit 1
    fi

    case "$1" in
        wallpaper)
            if [[ -z "$2" ]]; then
                select_wallpaper
            else
                set_wallpaper "$2"
            fi
            ;;
        next-bg)
            set_wallpaper "$(random_wallpaper)"
            ;;
        add-bg)
            add_wallpaper "$2"
            ;;
        *)
            set_theme "$1"
            ;;
    esac
            

}

main "$@"



#handle wallpaper


